<%= form_tag "/contacts", method: :get do %>
  <div class="form-group">
    <input type="text" class="form-control" name="search_result" placeholder="Search...">
  </div>
    <input type="submit" class="btn btn-default">
<% end %>

<% @contacts.each_slice(3) do |three_contacts| %>
  <div class="row">
    <% three_contacts.each do |contact| %>
      <div class = "col-md-4">
        <div class="well">
          <p>Name:<%= link_to(contact.full_name, "/contacts/#{contact.id}") %></p>
          <p>Email: <%= contact.email %></p>
          <p>Phone Number: <%= contact.phone_number %></p>
          <p>Added on:</p>
          <%= contact.friendly_time %>
          <%= link_to "Delete Contact Please", "/contacts/#{contact.id}", method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>